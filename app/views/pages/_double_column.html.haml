/ double column page
.left.float-left
  .box.green
    .head
    %ul#sidebar-navigation
      = sidebar_navigation(@root_page.descendants.arrange(:order => :display_order))
    .foot
.right.float-right
  %h1= @page.title
  #page-description= @page.description
  .clear

  - if @page.has_product?
    %p{:align => 'center'}
      - @page.product.photos.each do |photo|
        = link_to photo.image.url, :class => 'fancybox', :rel => 'gallery', :title => photo.alt do
          = image_tag photo.image.tiny.url, :alt => photo.alt, :width => 50, :height => 50, :class => 'photo'

