%ul#main-nav
  / left nav
  - Page.roots.left_nav.each do |page|
    %li.float-left= link_to page.display_name, slug_path(page), :title => page.display_name
  
  - if can?(:create, Page)
    %li.float-left= link_to '[+ new]', new_page_path

  / right nav
  - if logged_in?
    %li.float-right= link_to 'Logout', logout_path, :method => :delete
  - else
    %li.float-right= link_to 'Login', login_path
  - Page.roots.right_nav.each do |page|
    %li.float-right= link_to page.display_name, slug_path(page), :title => page.display_name